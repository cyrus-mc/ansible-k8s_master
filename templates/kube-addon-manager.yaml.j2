apiVersion: v1
kind: Pod
metadata:
  name: kube-addon-mamanger
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-addon-maanager
    image: {{ k8s_addon_manager.image }}:{{ k8s_addon_manager.tag }}
    imagePullPolicy: IfNotPresent
    resources:
      requests:
        cpu: 5m
        memory: 50Mi
    volumeMounts:
    - mountPath: /etc/kubernetes
      name: addons
      readOnly: true
  volumes:
  - hostPath:
      path: /etc/kubernetes
    name: addons
