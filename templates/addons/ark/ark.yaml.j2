---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: ark
  #namespace: heptio-ark-server
  labels:
    component: ark
    addonmanager.kubernetes.io/mode: Reconcile

---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: ark
  labels:
    component: ark
    addonmanager.kubernetes.io/mode: Reconcile
subjects:
  - kind: ServiceAccount
    #namespace: heptio-ark-server
    namespace: kube-system
    name: ark
roleRef:
  kind: ClusterRole
  name: cluster-admin
  apiGroup: rbac.authorization.k8s.io

---
apiVersion: ark.heptio.com/v1
kind: Config
metadata:
  #namespace: heptio-ark
  name: default
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
persistentVolumeProvider:
  name: aws
  config:
    region: us-west-2
backupStorageProvider:
  name: aws
  bucket: {{ k8s_addons.ark.s3_bucket_name }}
  config:
    region: us-west-2
backupSyncPeriod: 30m
gcSyncPeriod: 30m
scheduleSyncPeriod: 1m
restoreOnlyMode: false

---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  #namespace: heptio-ark-server
  name: ark
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
spec:
  replicas: 1
  template:
    metadata:
      labels:
        component: ark
    spec:
      restartPolicy: Always
      serviceAccountName: ark
      containers:
        - name: ark
          image: gcr.io/heptio-images/ark:latest
          command:
            - /ark
          args:
            - server
            - --namespace
            - kube-system
          volumeMounts:
            - name: plugins
              mountPath: /plugins
      volumes:
        - name: plugins
          emptyDir: {}

